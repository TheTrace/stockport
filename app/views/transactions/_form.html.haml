= form_for(@transaction, :html => { :class => "form-horizontal", :role => "form" } ) do |f|
	- if @transaction.errors.any?
		.error_explanation
			%h2
				= pluralize(@transaction.errors.count, "error")
				prohibited this transaction from being saved:

			%ul
				- @transaction.errors.full_messages.each do |msg|
					%li= msg

	.form-group
		= f.label :trans_type, :class => "control-label col-sm-2"
		.col-sm-5
			= f.text_field :trans_type, :class => "form-control"

	.form-group
		= f.label :trans_date, :class => "control-label col-sm-2"
		.col-sm-5
			= f.date_select :trans_date, :class => "form-control"

	.form-group
		= f.label :company_id, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :company_id, :class => "form-control"

	.form-group
		= f.label :quantity, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :quantity, :class => "form-control"

	.form-group
		= f.label :price, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :price, :class => "form-control"

	.form-group
		= f.label :consideration, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :consideration, :class => "form-control"

	.form-group
		= f.label :commission, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :commission, :class => "form-control"

	.form-group
		= f.label :stamp_duty, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :stamp_duty, :class => "form-control"

	.form-group
		= f.label :PTM_levy, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :PTM_levy, :class => "form-control"

	.form-group
		= f.label :payable, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :payable, :class => "form-control"

	.form-group
		= f.label :cost_percent, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :cost_percent, :class => "form-control"

	.form-group
		= f.label :bargin_ref, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :bargin_ref, :class => "form-control"

	.form-group
		= f.label :avg_cost, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :avg_cost, :class => "form-control"

	.form-group
		= f.label :buy_limit, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :buy_limit, :class => "form-control"

	.form-group
		= f.label :currency, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :currency, :class => "form-control"

	.form-group
		= f.label :x_rate, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :x_rate, :class => "form-control"

	.form-group
		= f.label :ex_div_date, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :ex_div_date, :class => "form-control"

	.form-group
		= f.label :payment_date, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :payment_date, :class => "form-control"

	.form-group
		= f.label :issue_date, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :issue_date, :class => "form-control"

	.form-group
		= f.label :div_price, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :div_price, :class => "form-control"

	.form-group
		= f.label :div_net_total, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :div_net_total, :class => "form-control"

	.form-group
		= f.label :person, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :person, :class => "form-control"

	.form-group
		= f.label :user_id, :class => "control-label col-sm-2"
		.col-sm-5
			= f.number_field :user_id, :class => "form-control"

	.actions
		.col-sm-offset-2
			= f.submit class: "btn btn-primary"
