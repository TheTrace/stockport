%p#notice= notice

= link_to '&laquo; Index'.html_safe, holdings_path

%h2
	= @holding.name

%h3
	= @holding.company.ticker + " - " + @holding.company.name if @holding.company 
	= link_to "<button type='button' class='btn btn-default btn-xs'><span class='glyphicon glyphicon-pencil'></span></button>".html_safe, edit_holding_path(@holding), html = {:title => "Edit"}

.form-horizontal
	.form-group
		%strong.col-sm-3 Opening date:
		.col-sm-4
			= @holding.opened_at.strftime("%d-%b-%Y") if @holding.opened_at

.form-horizontal
	.form-group
		%strong.col-sm-3 Company:
		.col-sm-5
			= @holding.company.name if @holding.company

.form-horizontal
	.form-group
		%strong.col-sm-3 Income:
		.col-sm-5
			&pound;
			= @holding.income

.form-horizontal
	.form-group
		%strong.col-sm-3 Expense:
		.col-sm-5
			&pound;
			= @holding.expense

.form-horizontal
	.form-group
		%strong.col-sm-3 Book Value:
		.col-sm-5
			&pound;
			= @holding.book_value

.form-horizontal
	.form-group
		%strong.col-sm-3 Closing date:
		.col-sm-4
			= @holding.closed_at.strftime("%d-%b-%Y") if @holding.closed_at


-#.form-horizontal
	-#.form-group
		-#%strong.col-sm-3 User:
		-#.col-sm-5
			-#if @holding.user
				-#= @holding.user.name



= link_to 'Edit', edit_holding_path(@holding)
|
= link_to 'Index', holdings_path
